@model AutoMarket.Models.Anuncio

@{
    ViewData["Title"] = $"{Model.Modelo?.Marca?.Nome ?? "Marca"} {Model.Modelo?.Nome ?? "Modelo"} - AutoMarket";
    var reservaAtiva = ViewBag.ReservaAtiva;
    string estadoReserva = reservaAtiva?.Estado?.Trim() ?? "";
    bool estaPago = estadoReserva.Equals("Pago", StringComparison.OrdinalIgnoreCase);
    bool estaReservado = estadoReserva.Equals("Reservado", StringComparison.OrdinalIgnoreCase);
    bool estaDisponivel = string.IsNullOrEmpty(estadoReserva) ||
                          estadoReserva.Equals("Disponivel", StringComparison.OrdinalIgnoreCase) ||
                          estadoReserva.Equals("Disponível", StringComparison.OrdinalIgnoreCase);

}

@section Styles {
    <link rel="stylesheet" href="~/css/resultsinformationcar.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
}

<main class="detail-container">
    <div class="car-content">
        <!-- Header com informações principais -->
        <div class="car-info-header">
            <div class="breadcrumb">
                <a href="/">Início</a>
                <span>›</span>
                <a href="/Search/SearchResults">Pesquisa</a>
                <span>›</span>
                <span class="current">@Model.Modelo?.Marca?.Nome @Model.Modelo?.Nome</span>
            </div>
            <h1>@($"{Model.Modelo?.Marca?.Nome ?? "Marca"} {Model.Modelo?.Nome ?? "Modelo"}")</h1>
            @{
                string nomeLocal = string.IsNullOrEmpty(Model.Localizacao)
                ? "Portugal"
                : Model.Localizacao;
            }
            <div class="location-date">
                <div class="info-badge">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                        <circle cx="12" cy="10" r="3" />
                    </svg>
                    @nomeLocal
                </div>
                <div class="info-badge">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" />
                        <path d="M16 2v4M8 2v4M3 10h18" />
                    </svg>
                    @Model.DataCriacao.ToString("dd 'de' MMMM 'de' yyyy")
                </div>
            </div>
        </div>

        <!-- Galeria de imagens -->
        <div class="car-gallery">
            <div class="car-gallery-main">
                <img id="mainImage"
                     src="@(Model.Imagens != null && Model.Imagens.Any() ? Model.Imagens.First().UrlImagem : "/images/default-car.jpg")"
                     alt="@Model.Modelo?.Nome ?? " Carro"">
                <div class="image-counter">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="18" height="18" rx="2" />
                        <circle cx="9" cy="9" r="2" />
                        <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21" />
                    </svg>
                    <span id="currentImageIndex">1</span> / <span id="totalImages">@(Model.Imagens?.Count() ?? 1)</span>
                </div>
            </div>
            <div class="car-thumbnails">
                @if (Model.Imagens != null && Model.Imagens.Any())
                {
                    int index = 0;
                    foreach (var img in Model.Imagens)
                    {
                        <img src="@img.UrlImagem"
                             onclick="changeImage(this, @index)"
                             class="@(img == Model.Imagens.First() ? "active" : "")"
                             data-index="@index" />
                        index++;
                    }
                }
                else
                {
                    <img src="/images/default-car.jpg" class="active" data-index="0" />
                }
            </div>
        </div>

        <!-- Descrição do veículo -->
        <div class="content-section">
            <div class="section-header">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z" />
                    <polyline points="14 2 14 8 20 8" />
                </svg>
                <h2>Descrição do Veículo</h2>
            </div>
            <div class="car-desc">
                <p>@Html.Raw((Model.Descricao ?? "Sem descrição disponível").Replace(Environment.NewLine, "<br />"))</p>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="car-sidebar">
        <!-- Box de preço e especificações -->
        <div class="summary-box">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <button class="favorite-btn @(ViewBag.IsFavorito ? "favorited" : "")"
                        onclick="toggleFavorite(this, @Model.Id)"
                        title="Adicionar aos favoritos">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                    </svg>
                </button>
            }
            else
            {
                <button class="favorite-btn disabled"
                        onclick="openGenericPopup('Faça login para adicionar aos favoritos.')"
                        title="Faça login para adicionar aos favoritos">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                    </svg>
                </button>
            }

            <div class="price-section">
                <div class="car-price">@($"{Model.Preco:C}")</div>
                <div class="price-label">Preço do veículo</div>
            </div>

            <div class="specs-grid">
                <div class="spec-card">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10" />
                        <path d="M12 2v20M2 12h20" />
                    </svg>
                    <div class="spec-info">
                        <span class="spec-label">Marca</span>
                        <span class="spec-value">@Model.Modelo?.Marca?.Nome</span>
                    </div>
                </div>

                <div class="spec-card">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="18" height="18" rx="2" />
                    </svg>
                    <div class="spec-info">
                        <span class="spec-label">Modelo</span>
                        <span class="spec-value">@Model.Modelo?.Nome</span>
                    </div>
                </div>

                <div class="spec-card">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" />
                        <path d="M16 2v4M8 2v4M3 10h18" />
                    </svg>
                    <div class="spec-info">
                        <span class="spec-label">Ano</span>
                        <span class="spec-value">@Model.Ano</span>
                    </div>
                </div>

                <div class="spec-card">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10" />
                    </svg>
                    <div class="spec-info">
                        <span class="spec-label">Quilometragem</span>
                        <span class="spec-value">@Model.Quilometragem?.ToString("N0") km</span>
                    </div>
                </div>

                <div class="spec-card">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="3" />
                        <path d="M12 1v6M12 17v6" />
                    </svg>
                    <div class="spec-info">
                        <span class="spec-label">Caixa</span>
                        <span class="spec-value">@Model.Caixa</span>
                    </div>
                </div>

                <div class="spec-card">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 22v-8a4 4 0 0 1 4-4h6a4 4 0 0 1 4 4v8" />
                    </svg>
                    <div class="spec-info">
                        <span class="spec-label">Combustível</span>
                        <span class="spec-value">@Model.Combustivel</span>
                    </div>
                </div>

                <div class="spec-card">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10" />
                    </svg>
                    <div class="spec-info">
                        <span class="spec-label">Cor</span>
                        <span class="spec-value">@Model.Cor</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botão de reservar veículo -->
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            if (estaPago)
            {
                <div class="vehicle-status-card sold">
                    <div class="status-icon">💰</div>
                    <div class="status-info">
                        <strong>Veículo Vendido</strong>
                        <span>Este veículo já não está disponível</span>
                    </div>
                </div>
            }
            else if (estaReservado)
            {
                <div class="vehicle-status-card reserved">
                    <div class="status-icon">🔒</div>
                    <div class="status-info">
                        <strong>Veículo Reservado</strong>
                        <span>Este veículo já não está disponível</span>
                    </div>
                </div>
            }
            else if (estaDisponivel)
            {
                <form id="formReservar" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="anuncioId" name="anuncioId" value="@Model.Id" />
                    <button type="submit" id="btnReservar" class="btn-reservar">🔒 Reservar Veículo</button>
                </form>
            }
        }

        <!-- Box de contacto -->
        <div class="contact-box">
            <div class="contact-header">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                </svg>
                <h4>Interessado neste veículo?</h4>
            </div>

            <button class="btn-contact" id="btnShowContact" onclick="showContact()">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                </svg>
                Mostrar Telefone e Contactar
            </button>

            <div id="contactInfo" class="contact-info" style="display:none;">
                <p>
                    <strong>Telefone:</strong> <span id="sellerPhone">@((Model.Vendedor?.Contacto) ?? "Não disponível")</span>
                </p>
                <a href="https://wa.me/@Model.Vendedor?.Contacto"
                   target="_blank"
                   class="btn-whatsapp">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                    </svg>
                    Falar no WhatsApp
                </a>
            </div>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                if (estaDisponivel)
                {
                    <button class="btn-visit" onclick="agendarVisita()">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="4" width="18" height="18" rx="2" />
                            <path d="M16 2v4M8 2v4M3 10h18" />
                        </svg>
                        Agendar Visita
                    </button>
                }
                else
                {
                    <button class="btn-visit" disabled>
                        Visitas Indisponíveis
                    </button>
                }
            }

            <div class="seller-info">
                <div class="seller-avatar">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                        <circle cx="12" cy="7" r="4" />
                    </svg>
                </div>
                <div class="seller-details">
                    <span class="seller-label">Anunciante</span>
                    <strong>@Model.Vendedor?.Utilizador.Nome</strong>
                </div>
            </div>
        </div>

        <!-- Mapa de localização -->
        <div class="map-box">
            <div class="map-header">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                    <circle cx="12" cy="10" r="3" />
                </svg>
                <h4>Localização do Veículo</h4>
            </div>
            @if (!string.IsNullOrEmpty(Model.Localizacao))
            {
                <div class="map-embed">
                    <iframe width="100%"
                            height="250"
                            style="border:0; border-radius: 10px;"
                            loading="lazy"
                            allowfullscreen
                            referrerpolicy="no-referrer-when-downgrade"
                            src="https://www.google.com/maps/embed/v1/place?key=@ViewBag.GoogleMapsApiKey&q=@Uri.EscapeDataString(nomeLocal)">
                    </iframe>
                </div>
            }
            else
            {
                <span class="no-location">Localização não disponível.</span>
            }
        </div>
    </div>
</main>

<!-- POPUP DE RESERVA -->
<div id="popupReserva" class="popup-overlay" style="display:none;">
    <div class="popup-box">
        <div class="popup-icon">🔒</div>
        <h3>Pedido de Reserva Enviado</h3>
        <p>O seu pedido de reserva foi enviado ao vendedor.</p>
        <p>Aguarde a aprovação do vendedor nas próximas 48 horas.</p>
        <div class="popup-buttons">
            <button onclick="closeReservaPopup()" class="btn-close-popup">Fechar</button>
        </div>
    </div>
</div>

<!-- POPUP LOGIN GENÉRICO -->
<div id="genericLoginPopup" class="popup-overlay" style="display:none;">
    <div class="popup-box">
        <div class="popup-icon">⚠</div>
        <h3>Necessário Login</h3>
        <p id="genericLoginMessage">Faça login para continuar.</p>

        <div class="popup-buttons">
            <a href="/Account/Login" class="btn-login-popup">Fazer Login</a>
            <button onclick="closeGenericPopup()" class="btn-close-popup">Fechar</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function changeImage(element, index) {
            document.getElementById('mainImage').src = element.src;
            document.querySelectorAll('.car-thumbnails img').forEach(t => t.classList.remove('active'));
            element.classList.add('active');
            document.getElementById('currentImageIndex').textContent = index + 1;
        }

        function toggleFavorite(el, anuncioId) {
            fetch('/Favoritos/Toggle', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `anuncioId=${anuncioId}`,
                credentials: 'include'
            })
            .then(async r => {
                if (!r.ok) {
                    const err = await r.json();
                    console.error(err);

                    if (r.status === 401) {
                        openGenericPopup("Faça login para adicionar anúncios aos favoritos.");
                        return;
                    }

                    alert("Erro ao atualizar favoritos: " + (err.error ?? "desconhecido"));
                    el.classList.remove('favorited');
                    return;
                }
                return r.json();
            })
            .then(data => {
                if (data && data.success) {
                    el.classList.toggle('favorited');
                }
            })
            .catch(err => {
                console.error(err);
                alert("Erro ao atualizar favoritos.");
                el.classList.remove('favorited');
            });
        }

        function agendarVisita() {
                    var estaPago = @(estaPago.ToString().ToLower());
        var estaReservado = @(estaReservado.ToString().ToLower());
            var isAuthenticated = @((User.Identity?.IsAuthenticated ?? false).ToString().ToLower());
            if (!isAuthenticated) {
                openGenericPopup("Faça login para agendar uma visita a este veículo.");
                return;
            }

                    if (estaPago || estaReservado) {
            alert("Veículo não disponível para visitas no momento.");
            return;
        }

            var reservaAtivaEstado = "@(ViewBag.ReservaAtiva?.Estado ?? "Disponivel")";

            if (reservaAtivaEstado !== "Disponivel") {
                alert("Veículo não disponível para visitas no momento.");
                return;
            }

            window.location.href = '/Visits/BookVisit?id=@Model.Id';
        }

        function showContact() {
            const btn = document.getElementById('btnShowContact');
            const contact = document.getElementById('contactInfo');

            if (contact.style.display === 'none') {
                contact.style.display = 'block';
                btn.innerHTML = `
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 15l-6-6-6 6"/>
                    </svg>
                    Ocultar Contacto
                `;
            } else {
                contact.style.display = 'none';
                btn.innerHTML = `
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                    </svg>
                    Mostrar Telefone e Contactar
                `;
            }
        }

        function openGenericPopup(message) {
            document.getElementById("genericLoginMessage").innerText = message;
            document.getElementById("genericLoginPopup").style.display = "flex";
        }

        function closeGenericPopup() {
            document.getElementById("genericLoginPopup").style.display = "none";
        }

        // Atualiza o total de imagens ao carregar
        document.addEventListener('DOMContentLoaded', function() {
            const totalImages = document.querySelectorAll('.car-thumbnails img').length;
            document.getElementById('totalImages').textContent = totalImages;
        });

        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('formReservar');
            if (!form) return; // ✅ evita erro se o formulário não existir

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const btn = document.getElementById('btnReservar');
            const anuncioIdElement = form.querySelector('input[name="anuncioId"]'); // ✅ Buscar dentro do form
            const anuncioId = anuncioIdElement ? anuncioIdElement.value : null;
            const token = form.querySelector('input[name="__RequestVerificationToken"]').value;

            console.log('anuncioId value:', anuncioId); // ✅ Deve mostrar "17"

            if (!anuncioId || anuncioId === "0") {
                alert("Erro: ID do veículo não definido.");
                return;
            }

            btn.disabled = true;
            btn.textContent = 'A reservar...';

            try {
                const res = await fetch('/Visits/ReservarVeiculoJson', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ anuncioId: parseInt(anuncioId) })
                });

                    if (!res.ok) {
                        const err = await res.json();
                        alert(err.message || "Erro ao reservar veículo.");
                        btn.disabled = false;
                        btn.textContent = '🔒 Reservar Veículo';
                        return;
                    }

                    const data = await res.json();

                    if (data.success) {
                        document.getElementById("popupReserva").style.display = "flex";
                        btn.style.display = 'none';
                    } else {
                        alert(data.message || "Erro ao reservar veículo.");
                        btn.disabled = false;
                        btn.textContent = '🔒 Reservar Veículo';
                    }

                } catch (err) {
                    console.error(err);
                    alert("Erro ao tentar reservar o veículo.");
                    btn.disabled = false;
                    btn.textContent = '🔒 Reservar Veículo';
                }
            });

            // Mostrar popup se TempData indicar sucesso
            const msgSucesso = '@TempData["MensagemSucesso"]';
            if (msgSucesso) {
                if (msgSucesso.includes("Veículo reservado")) {
                    document.getElementById("popupReserva").style.display = "flex";
                } else {
                    alert(msgSucesso); // outras mensagens de sucesso
                }
            }
        });

        function closeReservaPopup() {
            document.getElementById("popupReserva").style.display = "none";
        }

    </script>
}