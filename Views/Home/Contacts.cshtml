@{
    ViewData["Title"] = "Contacte-nos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/contacts.css" />
}

<div class="contact-container">
    <div class="contact-content">
        <h1>Contacte-nos</h1>
        <p>Tem alguma dúvida, sugestão ou precisa de ajuda? Estamos aqui para ajudar.</p>

        <div class="contact-info">
            <div class="contact-card">
                <h3>📍 Morada</h3>
                <p>AutoMarket Portugal<br>Rua dos Automóveis 45<br>Lisboa, Portugal</p>
            </div>

            <div class="contact-card">
                <h3>📞 Telefone</h3>
                <p><a href="tel:+351912345678">+351 912 345 678</a></p>
            </div>

            <div class="contact-card">
                <h3>✉️ Email</h3>
                <p><a href="mailto:support@automarket.pt">support@automarket.pt</a></p>
            </div>
        </div>

        <div class="contact-form-container">
            <h2>Envie-nos uma mensagem</h2>

            <form class="contact-form" method="post" asp-controller="Home" asp-action="SendContact">
                <div class="form-group">
                    <label for="name">Nome</label>
                    <input type="text" id="name" name="name" required placeholder="O seu nome" />
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required placeholder="O seu email" />
                </div>

                <div class="form-group">
                    <label for="message">Mensagem</label>
                    <textarea id="message" name="message" rows="5" required placeholder="Escreva aqui a sua mensagem..."></textarea>
                </div>

                <button type="submit" class="btn-submit">
                    <span>✉️ Enviar Mensagem</span>
                </button>
            </form>
        </div>

        <div class="map-section">
            <h2>📍 Onde estamos</h2>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3110.0574447846513!2d-9.142685023733586!3d38.73694615993392!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd193382c799b6f7%3A0xd9b89fd62e7b81f8!2sLisboa!5e0!3m2!1spt-PT!2spt!4v1699455029458!5m2!1spt-PT!2spt"
                    width="100%"
                    height="380"
                    style="border:0; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.15);"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>
</div>
