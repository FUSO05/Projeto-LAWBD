@{
    ViewData["Title"] = "Contacte-nos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/contacts.css" />
}

<div class="contact-container">
    <div class="contact-content">
        <h1>Contacte-nos</h1>
        <p>Tem alguma dúvida, sugestão ou precisa de ajuda? Estamos aqui para ajudar.</p>

        <div class="contact-info">
            <div class="contact-card">
                <h3>📍 Morada</h3>
                <p>AutoMarket <br>UTAD<br>Vila Real, Portugal</p>
            </div>

            <div class="contact-card">
                <h3>📞 Telefone</h3>
                <p><a href="tel:+351912345678">+351 999 999 999</a></p>
            </div>

            <div class="contact-card">
                <h3>✉️ Email</h3>
                <p><a href="mailto:support@automarket.pt">support@automarket.pt</a></p>
            </div>
        </div>

        <div class="map-section">
            <h2>📍 Onde estamos</h2>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3002.551846435974!2d-7.741002623415135!3d41.28601610228394!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd24ca4363ebeba7%3A0x4ad199a4df30ab35!2sUTAD%20-%20Universidade%20de%20Tr%C3%A1s-os-Montes%20e%20Alto%20Douro!5e0!3m2!1spt-PT!2spt!4v1709123456789!5m2!1spt-PT!2spt"
                    width="100%"
                    height="380"
                    style="border:0; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.15);"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>
</div>
