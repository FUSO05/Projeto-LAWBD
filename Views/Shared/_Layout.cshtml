@*
    Views/Shared/_Layout.cshtml
*@
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @(User.IsInRole("Admin") ? "AutoMarketAdmin" : "AutoMarket")</title>

    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-Bx8zjXlfI9/..." crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<style>
    #scrollTopBtn {
        position: fixed;
        bottom: 15px; /* mais perto do canto inferior */
        right: 15px; /* mais perto do canto direito */
        z-index: 1000;
        background-color: #1a237e; /* azul escuro */
        color: white;
        border: none;
        border-radius: 50%;
        width: 35px; /* menor */
        height: 35px; /* menor */
        font-size: 16px;
        cursor: pointer;
        display: none; /* inicialmente escondido */
        box-shadow: 0 2px 6px rgba(0,0,0,0.3);
        transition: background-color 0.3s;
    }

        #scrollTopBtn:hover {
            background-color: #0d154f; /* azul ainda mais escuro ao passar */
        }

    .btn-notifications {
        position: relative; /* muito importante */
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 35px;
        height: 35px;
        background-color: #1a237e;
        color: white;
        border-radius: 50%;
        text-decoration: none;
        font-size: 16px;
        margin-right: 10px;
        transition: background-color 0.3s;
    }

        .btn-notifications:hover {
            background-color: #0d154f; /* azul mais escuro ao passar */
        }

    .notification-badge {
        position: absolute;
        top: -5px;
        right: -5px;
        background-color: #e53935; /* vermelho */
        color: white;
        border-radius: 50%;
        padding: 2px 6px;
        font-size: 0.7rem;
        font-weight: 600;
        line-height: 1;
        box-shadow: 0 0 2px rgba(0,0,0,0.3);
    }


</style>


<body class="@(User.IsInRole("Admin") ? "admin" : "")">
    <header>
        <a asp-controller="Home" asp-action="Index" class="logo">
            @if (User.IsInRole("Admin"))
            {
                @:AutoMarketAdmin
            }
            else
            {
                <img src="~/img/automarket_logo.png" alt="AutoMarket" style="height: 40px;" />
            }
        </a>
        <nav>
            <a asp-controller="Search" asp-action="SearchResults">Comprar</a>
            <a asp-controller="Home" asp-action="About">Sobre</a>
        </nav>
        <div class="header-actions">
            @if (User.Identity.IsAuthenticated)
            {
                @* Botão Criar Anúncio para vendedores *@
                @if (User.IsInRole("Vendedor"))
                {
                    <a asp-controller="Anuncio" asp-action="CreateAnuncio" class="btn-create-ad" title="Criar Anúncio">
                        <i class="fas fa-plus"></i> Criar Anúncio
                    </a>
                }

                @if (User.Identity.IsAuthenticated && (User.IsInRole("Comprador")))
                {
                    <a asp-controller="Favoritos" asp-action="MarcasFavoritas" class="btn-notifications" title="Minhas Marcas Favoritas">
                        <i class="fas fa-star"></i>
                    </a>

                    <a asp-controller="Notificacoes" asp-action="Index" class="btn-notifications" title="Notificações">
                        <i class="fas fa-bell"></i>
                        @if (ViewBag.UnreadCount != null && ViewBag.UnreadCount > 0)
                        {
                            <span class="notification-badge">@ViewBag.UnreadCount</span>
                        }
                    </a>
                }

                <div class="user-menu">
                    <img src="@(User.FindFirst("FotoUrl")?.Value ?? "/img/avatar.png")"
                         alt="Foto do usuário"
                         class="user-avatar"
                         onclick="toggleDropdown()" />

                    <div id="dropdown" class="dropdown-content">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="GerirUtilizadores">
                                <i class="fas fa-crown"></i>
                                <span>Painel Admin</span>
                            </a>
                            <div class="dropdown-divider"></div>
                        }
                        <a asp-controller="Account" asp-action="UserMenu">
                            <i class="fas fa-user-cog"></i>
                            <span>Definições</span>
                        </a>
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="logout-btn">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>Logout</span>
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <!-- Login e Registar -->
                <a asp-controller="Account" asp-action="Login" class="btn-login">Login</a>
                <a asp-controller="Account" asp-action="Register" class="btn-register">Registar</a>
            }
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-top">
            <div class="footer-columns">
                <div class="footer-col">
                    <h4>AutoMarket</h4>
                    <p>Marketplace premium de veículos usados em Portugal.</p>
                </div>

                <div class="footer-col">
                    <h4>Ajuda & Suporte</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Contacts">Contacte-nos</a></li>
                        <li><a asp-controller="Home" asp-action="FAQ">Perguntas Frequentes</a></li>
                        <li><a asp-controller="Home" asp-action="Guia">Guia de Utilização</a></li>
                    </ul>
                </div>

                <div class="footer-col">
                    <h4>Legal</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Terms">Termos de Utilização</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Política de Privacidade</a></li>
                        <li><a asp-controller="Home" asp-action="Cookies">Política de Cookies</a></li>
                    </ul>
                </div>

                <div class="footer-col">
                    <h4>Siga-nos</h4>
                    <ul class="socials">
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Instagram</a></li>
                        <li><a href="#">LinkedIn</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <p>© 2025 AutoMarket. Todos os direitos reservados.</p>
        </div>
    </footer>

    <!-- Botão Voltar ao Topo -->
    <button id="scrollTopBtn" title="Ir para o topo">
        <i class="fas fa-arrow-up"></i>
    </button>


    @RenderSection("Scripts", required: false)
    <script>
        function toggleDropdown() {
            const dropdown = document.getElementById('dropdown');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }

        // Fechar dropdown se clicar fora
        window.onclick = function(event) {
            if (!event.target.matches('.user-avatar')) {
                const dropdown = document.getElementById('dropdown');
                if (dropdown) dropdown.style.display = 'none';
            }
        }
    </script>
    <script>
        const scrollBtn = document.getElementById("scrollTopBtn");

        // Mostrar botão quando o usuário rolar 200px para baixo
        window.onscroll = function() {
            scrollBtn.style.display = document.body.scrollTop > 200 || document.documentElement.scrollTop > 200 ? "block" : "none";
        };

        // Rolar suavemente passo a passo em no máximo 1s
        scrollBtn.onclick = function() {
            const duration = 1000; // duração máxima em ms
            const start = window.pageYOffset;
            const startTime = performance.now();

            function scrollStep(timestamp) {
                const elapsed = timestamp - startTime;
                const progress = Math.min(elapsed / duration, 1); // 0 a 1
                const ease = 1 - Math.pow(1 - progress, 3); // easing cúbico suave
                window.scrollTo(0, start * (1 - ease));

                if (progress < 1) {
                    requestAnimationFrame(scrollStep);
                }
            }

            requestAnimationFrame(scrollStep);
        };
    </script>

</body>
</html>