@model AutoMarket.Models.ViewModels.ReservasViewModel
@{
    ViewData["Title"] = "Minhas Reservas";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/usermenureservas.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* ==== Modal Customizado ==== */
        .custom-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .custom-modal-content {
            background: #fff;
            padding: 24px 32px;
            border-radius: 12px;
            text-align: center;
            max-width: 400px;
            width: 90%;
            box-shadow: 0 6px 20px rgba(0,0,0,0.2);
        }

        .custom-modal-actions {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            gap: 12px;
        }

        .btn-modal-yes {
            background: linear-gradient(135deg, #10b981, #22c55e);
            color: #fff;
            border-radius: 8px;
            padding: 8px 16px;
            font-weight: 600;
            cursor: pointer;
        }

        .btn-modal-no {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: #fff;
            border-radius: 8px;
            padding: 8px 16px;
            font-weight: 600;
            cursor: pointer;
        }
    </style>
}

<main class="reservas-container">
    <form style="display:none;">
        @Html.AntiForgeryToken()
    </form>

    <!-- SIDEBAR -->
    <aside class="sidebar">
        @if (Model.UtilizadorViewModel.TipoUser == "Vendedor")
        {
            @await Html.PartialAsync("_MenuVendedor", Model.UtilizadorViewModel)
        }
        else if (Model.UtilizadorViewModel.TipoUser == "Comprador")
        {
            @await Html.PartialAsync("_MenuComprador", Model.UtilizadorViewModel)
        }
    </aside>

    <!-- CONTENT -->
    <section class="reservas-content">
        <div class="reservas-header">
            <div class="header-info">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" />
                    <path d="M16 2v4M8 2v4M3 10h18" />
                </svg>
                <div>
                    <h2>Minhas Reservas</h2>
                    <p>@(Model.Reservas?.Count() ?? 0) @(Model.Reservas?.Count() == 1 ? "reserva" : "reservas")</p>
                </div>
            </div>
            <a href="@Url.Action("UserMenuHistoricoReservas", "Account")" class="btn-historico">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10" />
                    <polyline points="12 6 12 12 16 14" />
                </svg>
                Histórico
            </a>
        </div>

        <div class="reservas-list">
            @if (Model.Reservas == null || !Model.Reservas.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m0 6h.01" />
                        </svg>
                    </div>
                    <h3>Nenhuma reserva encontrada</h3>
                    <p>Explore os anúncios e faça reservas de veículos</p>
                    <a href="/Search/SearchResults" class="btn-browse">Explorar Veículos</a>
                </div>
            }
            else
            {
                @foreach (var reserva in Model.Reservas)
                {
                    <article class="reserva-card">
                        <div class="reserva-image-container">
                            <img src="@(reserva.Anuncio.Imagens?.FirstOrDefault()?.UrlImagem ?? "/images/default-car.jpg")"
                                 alt="@reserva.Anuncio.Modelo?.Nome" class="reserva-image" />
                            <div class="reserva-status-badge status-@reserva.Estado.ToLower()">
                                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    @if (reserva.Estado == "Reservado")
                                    {
                                        <polyline points="20 6 9 17 4 12" />
                                    }
                                    else if (reserva.Estado == "Cancelada" || reserva.Estado == "Recusada")
                                    {
                                        <line x1="18" y1="6" x2="6" y2="18" />
                                        <line x1="6" y1="6" x2="18" y2="18" />
                                    }
                                    else if (reserva.Estado == "Aguarde")
                                    {
                                        <circle cx="12" cy="12" r="10" />
                                        <polyline points="12 6 12 12 16 14" />
                                    }
                                </svg>
                                @reserva.Estado
                            </div>
                        </div>

                        <div class="reserva-details">
                            <div class="reserva-main-info">
                                <div class="reserva-top">
                                    <div class="reserva-car-info">
                                        <h3>@reserva.Anuncio.Modelo?.Marca?.Nome @reserva.Anuncio.Modelo?.Nome</h3>
                                        <div class="reserva-specs">
                                            <span class="spec-badge">@($"{reserva.Anuncio.Preco:C}")</span>
                                            <span class="spec-badge">@reserva.DataHoraReserva.ToString("dd/MM/yyyy HH:mm")</span>
                                            <span class="spec-badge">@reserva.Anuncio.Localizacao</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="buyer-info">
                                    <div>
                                        <span class="label">Vendedor:</span>
                                        <span class="value">@reserva.Anuncio.Vendedor?.Utilizador?.Nome</span>
                                    </div>
                                    <div>
                                        <span class="label">Contacto:</span>
                                        <span class="value">@reserva.Anuncio.Vendedor?.Utilizador?.Contacto</span>
                                    </div>
                                    <div>
                                        <span class="label">Email:</span>
                                        <span class="value">@reserva.Anuncio.Vendedor?.Utilizador?.Email</span>
                                    </div>
                                </div>

                                @if (reserva.Estado == "Aguarde")
                                {
                                    <div class="reserva-info-extra">
                                        <div class="info-item">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <circle cx="12" cy="12" r="10" />
                                                <polyline points="12 6 12 12 16 14" />
                                            </svg>
                                            <span>Expira em: @reserva.PrazoExpiracao?.ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="reserva-actions">
                                <a asp-controller="Search" asp-action="ResultsInformationCar" asp-route-id="@reserva.Anuncio.Id" class="btn-view btn-action">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                        <circle cx="12" cy="12" r="3" />
                                    </svg>
                                    Ver
                                </a>

                                @if (reserva.Estado == "Reservado")
                                {
                                    <a asp-controller="Checkout"
                                       asp-action="CheckoutCar"
                                       asp-route-reservaId="@reserva.Id"
                                       class="btn-action btn-pay">
                                        💳 Pagar
                                    </a>
                                }

                                @if (reserva.Estado == "Aguarde")
                                {
                                    <button type="button" class="btn-action btn-cancel" onclick="showCancelModal(@reserva.Id)">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <line x1="18" y1="6" x2="6" y2="18" />
                                            <line x1="6" y1="6" x2="18" y2="18" />
                                        </svg>
                                        Cancelar
                                    </button>
                                }
                            </div>
                        </div>
                    </article>
                }
            }
        </div>
    </section>

    <!-- Modal Cancelamento -->
    <div id="cancelModal" class="custom-modal">
        <div class="custom-modal-content">
            <p>Deseja realmente cancelar esta reserva?</p>
            <div class="custom-modal-actions">
                <button id="cancelModalYes" class="btn-modal-yes">Sim</button>
                <button id="cancelModalNo" class="btn-modal-no">Não</button>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const modal = document.getElementById("cancelModal");
            const btnYes = document.getElementById("cancelModalYes");
            const btnNo = document.getElementById("cancelModalNo");
            let reservaIdToCancel = null;

            window.showCancelModal = function(reservaId) {
                reservaIdToCancel = reservaId;
                modal.style.display = "flex";
            }

        btnYes.addEventListener("click", function() {
            if (!reservaIdToCancel) return;

            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            const form = document.createElement('form');
            form.method = 'POST';

            // Usar o ID como parâmetro de query ou parte da rota
            form.action = '/Account/CancelarReserva?id=' + reservaIdToCancel;

            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = '__RequestVerificationToken';
            input.value = token;
            form.appendChild(input);

            document.body.appendChild(form);
            form.submit();
        });

            btnNo.addEventListener("click", function() {
                modal.style.display = "none";
                reservaIdToCancel = null;
            });
        });
    </script>

}
