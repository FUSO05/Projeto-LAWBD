@model AutoMarket.Models.ViewModels.FavoritosViewModel

@{
    ViewData["Title"] = "Área de Comprador - Favoritos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/usermenufavoritos.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* ==== Modal Customizado ==== */
        .custom-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .custom-modal-content {
            background: #fff;
            padding: 24px 32px;
            border-radius: 12px;
            text-align: center;
            max-width: 400px;
            width: 90%;
            box-shadow: 0 6px 20px rgba(0,0,0,0.2);
        }

        .custom-modal-actions {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            gap: 12px;
        }

        .btn-modal-yes {
            background: linear-gradient(135deg, #10b981, #22c55e);
            color: #fff;
            border-radius: 8px;
            padding: 8px 16px;
            font-weight: 600;
            cursor: pointer;
        }

        .btn-modal-no {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: #fff;
            border-radius: 8px;
            padding: 8px 16px;
            font-weight: 600;
            cursor: pointer;
        }
    </style>
}

<main class="favorites-container">
    <aside class="sidebar">
        @if (Model.Utilizador.TipoUser == "Vendedor")
        {
            @await Html.PartialAsync("_MenuVendedor", Model.Utilizador)
        }
        else if (Model.Utilizador.TipoUser == "Comprador")
        {
            @await Html.PartialAsync("_MenuComprador", Model.Utilizador)
        }
    </aside>

    <section class="favorites-content">
        <div class="favorites-header">
            <div class="header-info">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                </svg>
                <div>
                    <h2>Meus Favoritos</h2>
                    @if (Model?.Favoritos?.Any() == true)
                    {
                        <p>@Model.Favoritos.Count() @(Model.Favoritos.Count() == 1 ? "veículo guardado" : "veículos guardados")</p>
                    }
                    else
                    {
                        <p>Nenhum veículo guardado</p>
                    }
                </div>
            </div>
        </div>

        <div class="favorites-list">
            @if (!Model?.Favoritos?.Any() ?? true)
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                        </svg>
                    </div>
                    <h3>Ainda não tem favoritos</h3>
                    <p>Explore os nossos anúncios e adicione veículos aos seus favoritos para encontrá-los facilmente mais tarde</p>
                    <a href="/Search/SearchResults" class="btn-browse">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8" />
                            <path d="m21 21-4.35-4.35" />
                        </svg>
                        Explorar Veículos
                    </a>
                </div>
            }
            else
            {
                @foreach (var a in Model.Favoritos)
                {
                    <article class="favorite-card">
                        <div class="favorite-image-container">
                            <img src="@(a.Imagens?.FirstOrDefault()?.UrlImagem ?? "/images/default-car.jpg")"
                                 alt="@a.Modelo?.Nome" class="favorite-image" />
                            <div class="favorite-badge">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                                </svg>
                            </div>
                        </div>

                        <div class="favorite-details">
                            <div class="favorite-top">
                                <div class="favorite-header">
                                    <h3 class="favorite-title">@a.Modelo?.Marca?.Nome</h3>
                                    <p class="favorite-subtitle">@a.Modelo?.Nome</p>
                                </div>
                                <div class="favorite-price-section">
                                    <span class="favorite-price">@($"{a.Preco:C}")</span>
                                </div>
                            </div>

                            <div class="favorite-specs">
                                <div class="spec-item">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="4" width="18" height="18" rx="2" />
                                        <path d="M16 2v4M8 2v4M3 10h18" />
                                    </svg>
                                    <span>@a.Ano</span>
                                </div>
                                <div class="spec-item">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10" />
                                    </svg>
                                    <span>@($"{a.Quilometragem:N0} km")</span>
                                </div>
                                <div class="spec-item">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M3 22v-8a4 4 0 0 1 4-4h6a4 4 0 0 1 4 4v8" />
                                    </svg>
                                    <span>@a.Combustivel</span>
                                </div>
                                <div class="spec-item">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="3" />
                                    </svg>
                                    <span>@a.Caixa</span>
                                </div>
                                <div class="spec-item">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                                        <circle cx="12" cy="10" r="3" />
                                    </svg>
                                    <span>@(a.Localizacao ?? "Local não disponível")</span>
                                </div>
                            </div>

                            <div class="favorite-actions">
                                <a asp-controller="Search" asp-action="ResultsInformationCar" asp-route-id="@a.Id" class="btn-action">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                        <circle cx="12" cy="12" r="3" />
                                    </svg>
                                    Ver Detalhes
                                </a>

                                <button type="button" class="btn-remove" onclick="removeFavorite(@a.Id)">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6" />
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                                    </svg>
                                    Remover
                                </button>
                            </div>
                        </div>
                    </article>
                }
            }
        </div>
    </section>
</main>

@section Scripts {
    <script>
        function removeFavorite(anuncioId) {
            const modalHtml = `
                <div class="custom-modal" id="favoriteModal">
                    <div class="custom-modal-content">
                        <p>Deseja remover este veículo dos favoritos?</p>
                        <div class="custom-modal-actions">
                            <button id="favoriteModalYes" class="btn-modal-yes">Sim</button>
                            <button id="favoriteModalNo" class="btn-modal-no">Não</button>
                        </div>
                    </div>
                </div>`;

            document.body.insertAdjacentHTML('beforeend', modalHtml);
            const modal = document.getElementById("favoriteModal");
            modal.style.display = "flex";
            const btnYes = document.getElementById("favoriteModalYes");
            const btnNo = document.getElementById("favoriteModalNo");

            btnYes.onclick = function() {
                fetch('/Favoritos/Toggle', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `anuncioId=${anuncioId}`,
                    credentials: 'include'
                })
                .then(() => location.reload());
            }

            btnNo.onclick = function() {
                modal.remove();
            }
        }
    </script>
}
