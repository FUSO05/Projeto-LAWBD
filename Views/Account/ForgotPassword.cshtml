@{
    ViewData["Title"] = "Recuperar Password";
}

@section Styles {
    <link rel="stylesheet" href="~/css/forgotpassword.css" />
}

<main>
    <div class="login-box">
        <h2>Recuperar a sua Password</h2>
        <p class="subtitle">Insira o seu email para receber instruções de recuperação.</p>

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input name="Email" type="email" id="email" placeholder="exemplo@dominio.com" required />
            </div>

            <button type="submit" class="btn-submit">Enviar Link de Recuperação</button>

            <div class="login-links">
                <a asp-action="Login">Voltar ao Login</a>
                <a asp-action="Register">Criar nova conta</a>
            </div>
        </form>
    </div>
</main>
