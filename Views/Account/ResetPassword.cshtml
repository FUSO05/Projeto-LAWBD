@model AutoMarket.Models.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Redefinir Password - AutoMarket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/resetpassword.css" />

<main>
    <div class="reset-box">
        <h2>Redefinir Password</h2>
        <p class="subtitle">Insira a sua nova password para atualizar a conta.</p>

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Token" />

            <div class="form-group">
                <label asp-for="NewPassword">Nova Password</label>
                <input asp-for="NewPassword" class="form-control" type="password" placeholder="Digite a nova password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirmar Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirme a nova password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">Redefinir Password</button>
        </form>

        <div class="extra-links">
            <a asp-action="Login" asp-controller="Account" class="back-link">← Voltar ao Login</a>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
