@model AutoMarket.Models.ViewModels.VisitasViewModel
@{
    ViewData["Title"] = "Histórico de Visitas";
}

@section Styles {
    <link rel="stylesheet" href="~/css/usermenuvisitas.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
}

<main class="visits-container">
    <aside class="sidebar">
        @if (Model.UtilizadorViewModel.TipoUser == "Vendedor")
        {
            @await Html.PartialAsync("_MenuVendedor", Model.UtilizadorViewModel)
        }
        else if (Model.UtilizadorViewModel.TipoUser == "Comprador")
        {
            @await Html.PartialAsync("_MenuComprador", Model.UtilizadorViewModel)
        }
    </aside>

    <section class="visits-content">
        <div class="visits-header">
            <div class="header-info">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                    <line x1="16" y1="2" x2="16" y2="6" />
                    <line x1="8" y1="2" x2="8" y2="6" />
                    <line x1="3" y1="10" x2="21" y2="10" />
                </svg>
                <div>
                    <h2>Histórico de Visitas</h2>
                    @if (Model != null && Model.Visitas != null && Model.Visitas.Any())
                    {
                        <p>@Model.Visitas.Count() @(Model.Visitas.Count() == 1 ? "visita" : "visitas") registadas</p>
                    }
                    else
                    {
                        <p>Nenhuma visita registrada</p>
                    }
                </div>
            </div>
            <a href="@Url.Action("UserMenuVisitas", "Account")" class="btn-historico">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M15 18l-6-6 6-6" />
                </svg>
                Voltar
            </a>
        </div>

        <div class="visits-list">
            @if (Model == null || Model.Visitas == null || !Model.Visitas.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                            <line x1="16" y1="2" x2="16" y2="6" />
                            <line x1="8" y1="2" x2="8" y2="6" />
                            <line x1="3" y1="10" x2="21" y2="10" />
                        </svg>
                    </div>
                    <h3>Nenhuma visita registrada</h3>
                </div>
            }
            else
            {
                @foreach (var visita in Model.Visitas)
                {
                    <article class="visit-card">
                        <div class="visit-image-container">
                            <img src="@(visita.Anuncio.Imagens?.FirstOrDefault()?.UrlImagem ?? "/images/default-car.jpg")"
                                 alt="@visita.Anuncio.Modelo?.Nome" class="visit-image" />
                            <div class="visit-status-badge status-@visita.Estado.ToLower()">
                                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    @if (visita.Estado == "Confirmada")
                                    {
                                        <polyline points="20 6 9 17 4 12" />
                                    }
                                    else if (visita.Estado == "Recusada" || visita.Estado == "Cancelada")
                                    {
                                        <line x1="18" y1="6" x2="6" y2="18" />
                                        <line x1="6" y1="6" x2="18" y2="18" />
                                    }
                                </svg>
                                @visita.Estado
                            </div>
                        </div>

                        <div class="visit-details">
                            <div class="visit-main-info">
                                <div class="visit-top">
                                    <div class="visit-car-info">
                                        <h3>@visita.Anuncio.Modelo?.Marca?.Nome @visita.Anuncio.Modelo?.Nome</h3>
                                        <div class="visit-specs">
                                            <span class="spec-badge">@visita.Anuncio.Ano</span>
                                            <span class="spec-badge">@($"{visita.Anuncio.Quilometragem:N0} km")</span>
                                            <span class="spec-badge">@visita.Anuncio.Combustivel</span>
                                            <span class="spec-badge">@visita.Anuncio.Caixa</span>
                                        </div>
                                    </div>
                                    <div class="visit-price-section">
                                        <span class="visit-price">@($"{visita.Anuncio.Preco:C}")</span>
                                    </div>
                                </div>

                                <div class="visit-datetime">
                                    <div class="datetime-item">
                                        <span class="label">Data</span>
                                        <span class="value">@visita.DataHoraReserva.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="datetime-item">
                                        <span class="label">Hora</span>
                                        <span class="value">@visita.DataHoraReserva.ToString("HH:mm")</span>
                                    </div>
                                    <div class="datetime-item">
                                        <span class="label">Local</span>
                                        <span class="value">@(visita.Anuncio.Localizacao ?? "N/A")</span>
                                    </div>
                                </div>
                            </div>

                            <div class="visit-actions">
                                <a asp-controller="Search" asp-action="ResultsInformationCar" asp-route-id="@visita.Anuncio.Id" class="btn-action btn-view">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                        <circle cx="12" cy="12" r="3" />
                                    </svg>
                                    Ver
                                </a>
                            </div>
                        </div>
                    </article>
                }
            }
        </div>
    </section>
</main>
