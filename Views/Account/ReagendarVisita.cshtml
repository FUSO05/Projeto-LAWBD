@model AutoMarket.Models.ViewModels.ReagendarVisitaViewModel

@{
    ViewData["Title"] = "Reagendar Visita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/bookvisit.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_blue.css">
}

<main class="visit-container">
    <div class="visit-card">
        <div class="visit-header">
            <div class="breadcrumb">
                <a href="/">Início</a>
                <span>›</span>
                <a href="@Url.Action("ResultsInformationCar", "Search", new { id = Model.Anuncio.Id })">Veículo</a>
                <span>›</span>
                <span>Reagendar Visita</span>
            </div>
            <h2>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                    <path d="M18.5 2.5a2.121 2.121 0 1 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                </svg>
                Alterar marcação
            </h2>
            <p class="visit-subtitle">Escolha um novo horário para a sua visita</p>
        </div>

        <div class="car-info-box">
            <img src="@Model.Anuncio.Imagens?.FirstOrDefault()?.UrlImagem" class="car-img" alt="Imagem do veículo" />
            <div class="car-info-content">
                <span class="car-label">Veículo</span>
                <h3 class="car-title">@Model.Anuncio.Modelo.Marca.Nome @Model.Anuncio.Modelo.Nome</h3>
                <div class="car-meta">
                    <div class="car-specs">
                        <strong>Marcação atual:</strong>
                        <span class="text-primary">@Model.DataHoraAtual.ToString("dd/MM/yyyy 'às' HH:mm")</span>
                    </div>
                </div>
            </div>
        </div>

        <form asp-controller="Account" asp-action="ConfirmarReagendamento" method="post" class="visit-form">
            @* IDs Ocultos para o POST *@
            <input type="hidden" name="reservaOriginalId" value="@Model.ReservaOriginalId" />
            <input type="hidden" name="anuncioId" value="@Model.AnuncioId" />

            <div class="form-section">
                <h4 class="section-title">Novo Horário</h4>

                <div class="form-row">
                    <div class="form-group">
                        <label for="data">Nova Data</label>
                        <input type="text" id="data" name="data" placeholder="Selecionar data" required />
                    </div>

                    <div class="form-group">
                        <label for="horaSelect">Novo Horário</label>
                        <select id="horaSelect" name="hora" required>
                            <option value="" selected disabled>Escolha...</option>
                            <option value="09:00">09:00</option>
                            <option value="10:00">10:00</option>
                            <option value="11:00">11:00</option>
                            <option value="14:00">14:00</option>
                            <option value="15:00">15:00</option>
                            <option value="16:00">16:00</option>
                        </select>
                    </div>
                </div>

                <div id="vagasDia" class="vagas-info"></div>
            </div>

            <div class="form-actions">
                <button type="submit" class="visit-btn">
                    Confirmar Alteração
                </button>
                <a href="javascript:history.back()" style="display: block; text-align: center; margin-top: 15px; color: #666; font-size: 0.9rem; text-decoration: none;">Cancelar e voltar</a>
            </div>
        </form>

        <div class="info-box">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10" />
                <line x1="12" y1="16" x2="12" y2="12" />
                <line x1="12" y1="8" x2="12.01" y2="8" />
            </svg>
            <span>Ao reagendar, a marcação anterior será automaticamente cancelada.</span>
        </div>
    </div>
</main>

<div id="popupOverlay" class="popup-overlay" style="display:none;">
    <div id="popupBox" class="popup-box">
        <div class="popup-icon" id="popupIcon"></div>
        <h3 id="popupTitle">Mensagem</h3>
        <p id="popupMessage"></p>
        <button onclick="closePopup()" class="btn-close-popup">Entendido</button>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        let redirectUrl = null;

        function showCustomPopup(title, message, redirect, isError = false) {
            document.getElementById("popupTitle").textContent = title;
            document.getElementById("popupMessage").textContent = message;
            const icon = document.getElementById("popupIcon");

            if (isError) {
                icon.innerHTML = '⚠';
                icon.className = 'popup-icon error';
            } else {
                icon.innerHTML = '✓';
                icon.className = 'popup-icon success';
            }
            redirectUrl = redirect;
            document.getElementById("popupOverlay").style.display = "flex";
        }

        function closePopup() {
            document.getElementById("popupOverlay").style.display = "none";
            if (redirectUrl) window.location.href = redirectUrl;
        }

        @if (TempData["MensagemErro"] != null)
        {
                <text>showCustomPopup("Atenção", "@TempData["MensagemErro"]", null, true);</text>
        }
        @if (TempData["MensagemSucesso"] != null)
        {
                <text>showCustomPopup("Sucesso!", "@TempData["MensagemSucesso"]", "@Url.Action("MinhasVisitas", "Visits")", false);</text>
        }

        // Configuração do Flatpickr
        flatpickr("input[name='data']", {
            altInput: true,
            altFormat: "d/m/Y",
            dateFormat: "Y-m-d",
            minDate: "today",
            disableMobile: "true",
            onChange: function(selectedDates, dateStr) {
                const anuncioId = @Model.AnuncioId;
                const horaSelect = document.getElementById("horaSelect");
                const vagasLabel = document.getElementById("vagasDia");

                horaSelect.value = "";

                fetch(`/Visits/GetHorasIndisponiveis?anuncioId=${anuncioId}&data=${dateStr}&reservaOriginalId=@Model.ReservaOriginalId`)
                    .then(r => r.json())
                    .then(horasIndisponiveis => {
                        let vagas = 0;
                        for (let opt of horaSelect.options) {
                            if (opt.value === "") continue;
                            if (horasIndisponiveis.includes(opt.value)) {
                                opt.disabled = true;
                                opt.classList.add("disabled-option");
                            } else {
                                opt.disabled = false;
                                opt.classList.remove("disabled-option");
                                vagas++;
                            }
                        }

                        if (vagas > 0) {
                            vagasLabel.innerHTML = `✓ ${vagas} horário(s) disponível(is)`;
                            vagasLabel.className = 'vagas-info available';
                        } else {
                            vagasLabel.innerHTML = `✕ Sem horários disponíveis`;
                            vagasLabel.className = 'vagas-info unavailable';
                        }
                    });
            }
        });
    </script>
}