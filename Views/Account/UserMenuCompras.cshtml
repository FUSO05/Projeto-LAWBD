@model AutoMarket.Models.ViewModels.ReservasViewModel
@{
    ViewData["Title"] = "Minhas Compras";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/usermenureservas.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
}

<main class="reservas-container">
    <aside class="sidebar">
        @if (Model.UtilizadorViewModel.TipoUser == "Vendedor")
        {
            @await Html.PartialAsync("_MenuVendedor", Model.UtilizadorViewModel)
        }
        else if (Model.UtilizadorViewModel.TipoUser == "Comprador")
        {
            @await Html.PartialAsync("_MenuComprador", Model.UtilizadorViewModel)
        }
    </aside>

    <section class="reservas-content">
        <div class="reservas-header">
            <div class="header-info">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" />
                    <path d="M16 2v4M8 2v4M3 10h18" />
                </svg>
                <div>
                    <h2>Minhas Compras</h2>
                    <p>@(Model.Reservas?.Count() ?? 0) @(Model.Reservas?.Count() == 1 ? "compra" : "compras")</p>
                </div>
            </div>
        </div>

        <div class="reservas-list">
            @if (Model.Reservas == null || !Model.Reservas.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m0 6h.01" />
                        </svg>
                    </div>
                    <h3>Nenhuma compra encontrada</h3>
                    <p>Explore os anúncios e faça uma compra de veículos</p>
                    <a href="/Search/SearchResults" class="btn-browse">Explorar Veículos</a>
                </div>
            }
            else
            {
                @foreach (var compra in Model.Reservas)
                {
                    <article class="reserva-card">
                        <div class="reserva-image-container">
                            <img src="@(compra.Anuncio.Imagens?.FirstOrDefault()?.UrlImagem ?? "/images/default-car.jpg")"
                                 alt="@compra.Anuncio.Modelo?.Nome" class="reserva-image" />
                            <div class="reserva-status-badge status-pago">
                                Pago
                            </div>
                        </div>

                        <div class="reserva-details">
                            <div class="reserva-main-info">
                                <div class="reserva-top">
                                    <div class="reserva-car-info">
                                        <h3>@compra.Anuncio.Modelo?.Marca?.Nome @compra.Anuncio.Modelo?.Nome</h3>
                                        <div class="reserva-specs">
                                            <span class="spec-badge">@($"{compra.Anuncio.Preco:C}")</span>
                                            <span class="spec-badge">@compra.DataHoraReserva.ToString("dd/MM/yyyy HH:mm")</span>
                                            <span class="spec-badge">@compra.Anuncio.Localizacao</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="buyer-info">
                                    <div>
                                        <span class="label">Vendedor:</span>
                                        <span class="value">@compra.Anuncio.Vendedor?.Utilizador?.Nome</span>
                                    </div>
                                    <div>
                                        <span class="label">Contacto:</span>
                                        <span class="value">@compra.Anuncio.Vendedor?.Utilizador?.Contacto</span>
                                    </div>
                                    <div>
                                        <span class="label">Email:</span>
                                        <span class="value">@compra.Anuncio.Vendedor?.Utilizador?.Email</span>
                                    </div>
                                </div>
                            </div>

                            <div class="reserva-actions">
                                <a asp-controller="Search" asp-action="ResultsInformationCar" asp-route-id="@compra.Anuncio.Id" class="btn-view btn-action">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                        <circle cx="12" cy="12" r="3" />
                                    </svg>
                                    Ver
                                </a>

                                <div class="status-pago-compacto">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                    <span>Comprado</span>
                                </div>
                            </div>
                        </div>
                    </article>
                }
            }
        </div>
    </section>
</main>
