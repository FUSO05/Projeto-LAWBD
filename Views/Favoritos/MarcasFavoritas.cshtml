@model AutoMarket.Models.ViewModels.MarcasFavoritasViewModel

@{
    ViewData["Title"] = "Minhas Marcas Favoritas";
    Layout = "_Layout";
}

@section Styles {
    <style>
        h2 {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            margin-bottom: 24px;
            color: #1a237e;
            text-align: center;
        }

        #marcasFavoritasForm {
            max-width: 800px;
            margin: 0 auto 40px auto;
            padding: 20px;
            background: #f9f9f9;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .marcas-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }

        .marca-item {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 12px 16px;
            text-align: center;
            transition: all 0.2s;
            cursor: pointer;
        }

            .marca-item:hover {
                border-color: #1a237e;
                box-shadow: 0 4px 12px rgba(26,35,126,0.2);
            }

            .marca-item input[type="checkbox"] {
                margin-right: 8px;
                accent-color: #1a237e;
                transform: scale(1.2);
            }

        #marcasFavoritasForm button {
            display: block;
            width: 200px;
            margin: 0 auto;
            padding: 10px 20px;
            background: linear-gradient(135deg, #10b981, #22c55e);
            color: white;
            font-size: 16px;
            font-weight: 600;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background 0.3s;
        }

            #marcasFavoritasForm button:hover {
                background: linear-gradient(135deg, #0f9a70, #1ca64f);
            }

        .popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }

        .popup {
            background: #fff;
            padding: 24px;
            border-radius: 14px;
            width: 320px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            animation: scaleIn 0.2s ease;
        }

            .popup h3 {
                margin-bottom: 12px;
                color: #1a237e;
                font-family: 'Poppins', sans-serif;
            }

            .popup p {
                margin-bottom: 20px;
                color: #444;
            }

            .popup button {
                padding: 10px 24px;
                border: none;
                border-radius: 8px;
                background: linear-gradient(135deg, #10b981, #22c55e);
                color: white;
                font-weight: 600;
                cursor: pointer;
            }
    </style>
}

<h2>Escolha as suas marcas favoritas</h2>

<form id="marcasFavoritasForm">
    <div class="marcas-list">
        @foreach (var marca in Model.TodasMarcas)
        {
            var isChecked = (Model.MarcasFavoritas?.Any(mf => mf.MarcaId == marca.Id) ?? false) ? "checked" : "";
            <div class="marca-item">
                <label>
                    <input type="checkbox" value="@marca.Id" @isChecked /> @marca.Nome
                </label>
            </div>
        }
    </div>
    <button type="submit">Salvar</button>
</form>

<div id="popupOverlay" class="popup-overlay">
    <div class="popup">
        <h3 id="popupTitle"></h3>
        <p id="popupMessage"></p>
        <button onclick="fecharPopup()">OK</button>
    </div>
</div>


@section Scripts {
    <script>
        const form = document.getElementById("marcasFavoritasForm");

        function abrirPopup(titulo, mensagem) {
            document.getElementById("popupTitle").innerText = titulo;
            document.getElementById("popupMessage").innerText = mensagem;
            document.getElementById("popupOverlay").style.display = "flex";
        }

        function fecharPopup() {
            document.getElementById("popupOverlay").style.display = "none";
        }

        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const selectedIds = Array.from(
                form.querySelectorAll("input[type=checkbox]:checked")
            ).map(cb => parseInt(cb.value));

            const response = await fetch('/Favoritos/SalvarMarcasFavoritas', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(selectedIds)
            });

            const result = await response.json();

            if (result.success) {
                abrirPopup(
                    "Sucesso 🎉",
                    "Marcas favoritas salvas com sucesso!"
                );
            } else {
                abrirPopup(
                    "Erro ❌",
                    "Ocorreu um erro ao salvar suas marcas favoritas."
                );
            }
        });
    </script>
}
