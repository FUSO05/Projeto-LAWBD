@model AutoMarket.Models.ViewModels.NotificacoesViewModel

@{
    ViewData["Title"] = "Minhas Notificações";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
        }

        .notifications-container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 16px;
            padding-bottom: 120px; /* espaço extra para footer */
        }

        .notifications-header {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-bottom: 24px;
            flex-wrap: wrap;
        }

            .notifications-header svg {
                width: 32px;
                height: 32px;
                color: #1a237e;
            }

            .notifications-header h2 {
                margin: 0;
                font-weight: 600;
                font-size: 2rem;
                color: #1a237e;
            }

            .notifications-header span {
                font-weight: 500;
                color: #555;
            }

        .notifications-list {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .notification-card {
            background: #fff;
            border-radius: 12px;
            padding: 20px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 6px 15px rgba(0,0,0,0.08);
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .notification-card.unread {
                background: #e3f2fd;
                border-left: 5px solid #1a237e;
            }

            .notification-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.12);
            }

        .notification-text {
            display: flex;
            flex-direction: column;
            gap: 4px;
            max-width: 80%;
        }

        .notification-title {
            font-weight: 600;
            font-size: 1.1rem;
            color: #1a237e;
        }

        .notification-message {
            font-size: 0.95rem;
            color: #444;
        }

        .notification-date {
            font-size: 0.85rem;
            color: #888;
        }

        .btn-mark-read {
            background: linear-gradient(135deg, #10b981, #22c55e);
            color: #fff;
            border: none;
            padding: 8px 14px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: background 0.3s;
        }

            .btn-mark-read:hover {
                background: linear-gradient(135deg, #0f9a70, #1ca64f);
            }

        .empty-state {
            text-align: center;
            padding: 80px 16px;
            color: #6b7280;
            font-size: 1.1rem;
        }

        footer {
            background: #1a237e;
            color: #fff;
            text-align: center;
            padding: 16px 0;
        }

        /* Badge para notificações não lidas */
        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background-color: #e53935;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 0.7rem;
            font-weight: 600;
            line-height: 1;
            box-shadow: 0 0 2px rgba(0,0,0,0.3);
        }
    </style>
}

<main class="notifications-container">
    <div class="notifications-header">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 8a6 6 0 0 0-12 0c0 7-3 9-3 9h18s-3-2-3-9"></path>
            <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
        </svg>
        <h2>Minhas Notificações</h2>
        @if (Model?.Notificacoes?.Any() == true)
        {
            <span>(@Model.Notificacoes.Count() notificações)</span>
        }
    </div>

    <div class="notifications-list">
        @if (!Model?.Notificacoes?.Any() ?? true)
        {
            <div class="empty-state">
                <h3>Sem notificações</h3>
                <p>Você ainda não recebeu nenhuma notificação.</p>
            </div>
        }
        else
        {
            @foreach (var n in Model.Notificacoes.OrderByDescending(x => x.DataCriada))
            {
                <div class="notification-card @(n.Lida ? "" : "unread")" id="notif-@n.Id">
                    <div class="notification-text">
                        <span class="notification-title">@n.Titulo</span>
                        <span class="notification-message">@n.Mensagem</span>
                        <span class="notification-date">@n.DataCriada.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    @if (!n.Lida)
                    {
                        <button class="btn-mark-read" onclick="markAsRead(@n.Id)">Marcar como lida</button>
                    }
                </div>
            }
        }
    </div>
</main>

@section Scripts {
    <script>
        async function markAsRead(notifId) {
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

                const response = await fetch('/Notificacoes/MarkAsRead', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: `id=${notifId}`
                });

                if (response.ok) {
                    const card = document.getElementById(`notif-${notifId}`);
                    card.classList.remove('unread');
                    const btn = card.querySelector('.btn-mark-read');
                    if (btn) btn.remove();

                    // Atualizar badge de notificações
                    const badge = document.querySelector('.btn-notifications .notification-badge');
                    if (badge) {
                        let count = parseInt(badge.textContent);
                        count = Math.max(0, count - 1);
                        if (count === 0) badge.remove();
                        else badge.textContent = count;
                    }
                } else {
                    console.error('Erro ao marcar notificação como lida.');
                }
            } catch (err) {
                console.error(err);
            }
        }
    </script>
}
